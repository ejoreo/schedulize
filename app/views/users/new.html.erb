
<div class="greeting">	
<h1> Welcome to SchedulEyes! </h1>
</div>
<p>
	<% if @errors %>
			<% @errors.each do |e| %>
				<li> <%= e %> </li>
			<% end %>
	<% end %>
</p>
<div class="centered">
  <%= form_for @user, class:"form-horizontal" do |f| %>
    <fieldset>
      <legend>Sign Up</legend>
      <div class ="row">
        <div class="form-group">
          <%=f.label :first_name, class:"col-lg-3 control-label"%>
          <div class="col-lg-9">
            <%=f.text_field :first_name, class:"form-control"%></br>
          </div>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <%=f.label :last_name, class:"col-lg-3 control-label"%>
          <div class="col-lg-9">
            <%=f.text_field :last_name, class:"form-control"%></br>
          </div>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <%=f.label :email, class:"col-lg-3 control-label"%>
          <div class="col-lg-9">
            <%=f.text_field :email, class:"form-control"%>
            <div class="checkbox col-lg-3">
              <div class="row">
                <label>
                  <%=f.check_box :mentor%> Mentor?
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label class="col-lg-3 control-label">Phase</label>
          <div class="col-lg-1">
            <%=f.collection_select :phase, User::PHASES, :to_i, :to_i, include_blank: false, class:"form-control"%></br></br>
          </div>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
            <%=f.label :password, class:"col-lg-3 control-label"%>
            <div class="col-lg-9">
              <%=f.password_field :password, class:"form-control"%></br>
            </div>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <%=f.label :password_confirmation, class:"col-lg-3 control-label"%>
          <div class="col-lg-9">
            <%=f.password_field :password_confirmation, class:"form-control"%></br>
          </div>
        </div>
      </div>
      <div class ="row">
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%=f.submit "Create Account", class:"btn btn-primary"%>
          </div>
        </div>
      </div>
    </fieldset>
  <%end%>
</div>
