
<!-- valirables -->
<!-- slots: array of slot -->
<!-- type: appointment or slot -->

<!-- List of active slots of the user -->
<% slots.each do |slot| %>

  <br>

  <!-- title -->
  <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title" ><%= link_to "#{slot.title}", slot_path(slot) %></h3>
      </div>
  <!-- time -->
      <div class="panel-body">
        <p><%= display_date_time(slot.start_time) %> ~ <%= display_date_time(slot.end_time) %></p>
      <% if type == 'appointment' %>
        <!-- menter -->
        <p>Organized by: <%= slot.mentor.first_name %> <%= slot.mentor.last_name %></p>

        <% else %>
        <!-- capacity -->
        <p>Capacity:<%= slot.capacity %></p>

        <!-- delete link -->
        <%= link_to 'Delete', slot_path(slot), method: :delete, class:"btn btn-danger btn-xs" %>
      <% end %>
    </div>
  </div>
  <br>
  <br>
  <br>
<% end %>
